{
    "options": {
        "env": {
            "GNU_INSTALL_ROOT": "/usr/bin/",
            "SDK_ROOT": "/opt/nRF5_SDK_17.0.2"
        }
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/_build"
                ]
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/_build"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/_build"
                ]
            }
        },
    ]
}